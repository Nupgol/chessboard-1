<html>
<head>
<title>Chessboard</title>
</head>
<body>
<table border="1" height="500px" width="500px">
<?php
for($i=1;$i<=8;$i++)
{
echo "<tr>";
for($j=1;$j<=8;$j++)
{
$total=$i+$j;
if($total%2==0)
{
echo "<td bgcolor=#FFFFFF></td>";
}
else
{
echo "<td bgcolor=#000000></td>";
}
}
echo "</tr>";
}
?>
</table>
</body>
</html>
